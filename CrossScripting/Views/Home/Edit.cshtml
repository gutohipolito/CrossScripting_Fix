
@{
    ViewBag.Title = "Edit";
}

<h2>Editar Produto</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" value="@ViewBag.Id" />
    <label>Nome: </label>
    <input type="text" id="nome" name="nome" value="@ViewBag.Nome" /><br />

    <label>Descrição: </label>
    <textarea maxlength="500" id="descricao" name="descricao">@ViewBag.Descricao</textarea><br />

    <input type="submit" value="Salvar" /><br />

    <label>@ViewBag.Mensagem</label>
}
